import tkinter as tk

class LEDView:
    def __init__(self, root):
        self.root = root
        self.root.geometry("400x200")
        self.root.title("Control de LED GPIO 18")

        self.marco = tk.Frame(self.root)
        self.marco.pack(pady=20)

        self.boton_on = tk.Button(self.marco, text="ENCENDER LED", width=20)
        self.boton_on.pack(pady=5)

        self.boton_off = tk.Button(self.marco, text="APAGAR LED", width=20)
        self.boton_off.pack(pady=5)

        self.lbl_estado = tk.Label(self.root, text="Estado LED: OFF")
        self.lbl_estado.pack(pady=10)

    def actualizar_estado(self, estado_led):
        if estado_led:
            self.lbl_estado.config(text="Estado LED: ON")
        else:
            self.lbl_estado.config(text="Estado LED: OFF")
